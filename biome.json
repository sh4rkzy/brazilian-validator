{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": false,
		"includes": ["**", "!test/**"]
	},
	"assist": {
		"enabled": false
	},
	"files": {
		"includes": [
			"src/**/*.js",
			"test/**/*.js",
			"!**/*.min.js",
			"**",
			"!**/dist/**",
			"!**/*.generated.js"
		]
	}
}
