{
	"name": "@sh4rkzy/brazilian-validator",
	"version": "0.0.9",
	"description": "Valide documentos brasileiros (CPF e CNPJ) no NestJS/TypeScript de forma simples, nativa",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"dev": "tsc --watch",
		"test": "jest",
		"test:unit": "jest src/__tests__/unit",
		"test:integration": "jest src/__tests__/integration",
		"test:e2e": "jest src/__tests__/e2e",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"release:patch": "npm version patch && git push origin main --tags",
		"release:minor": "npm version minor && git push origin main --tags",
		"release:major": "npm version major && git push origin main --tags"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sh4rkzy/brazilian-validator.git"
	},
	"homepage": "https://github.com/sh4rkzy/brazilian-validator#readme",
	"bugs": {
		"url": "https://github.com/sh4rkzy/brazilian-validator/issues"
	},
	"keywords": [
		"cpf",
		"brazilian",
		"validator",
		"document",
		"typescript",
		"brazil",
		"validation"
	],
	"author": "sh4rkzy",
	"license": "MIT",
	"files": [
		"dist",
		"README.md"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.0",
		"jest": "^30.1.1",
		"reflect-metadata": "^0.2.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2"
	}
}